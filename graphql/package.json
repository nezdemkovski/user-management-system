{
  "name": "graphql",
  "description": "GraphQL Server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "author": {
    "name": "Yuri Yakovlev",
    "email": "hi@mynameisyuri.com",
    "url": "https://mynameisyuri.com"
  },
  "dependencies": {
    "apollo-server": "^2.0.5",
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "graphql-yoga": "^1.16.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/graphql-iso-date": "^3.3.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.2.9",
    "dotenv-cli": "^1.4.0",
    "graphql-cli": "2.16.5",
    "nodemon": "1.18.4",
    "now": "^11.4.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "start": "NODE_ENV=development dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "dev": "NODE_ENV=development npm-run-all --parallel start playground",
    "debug": "NODE_ENV=development dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "rimraf dist && tsc --build --verbose",
    "serve": "node dist",
    "prettier": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "test-ci": "yarn lint"
  }
}
